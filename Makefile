all:
	make -C behavioural_patterns/command 
	make -C behavioural_patterns/observer 
	make -C behavioural_patterns/state/iteration_1 
	make -C behavioural_patterns/state/iteration_2 
	make -C behavioural_patterns/state/iteration_3 
	make -C behavioural_patterns/strategy/iteration_1 
	make -C behavioural_patterns/strategy/iteration_2 
	make -C behavioural_patterns/visitor 
	make -C creational_patterns/builder/pizza 
	make -C creational_patterns/factory_method/iteration_1 
	make -C creational_patterns/factory_method/iteration_2 
	make -C creational_patterns/factory_method/iteration_3 
	make -C creational_patterns/prototype/iteration_1 
	make -C creational_patterns/prototype/iteration_2 
	make -C creational_patterns/singleton/iteration_1 
	make -C creational_patterns/singleton/iteration_2 
	make -C creational_patterns/singleton/iteration_3 
	make -C structural_patterns/adapter 
	make -C structural_patterns/bridge 
	make -C structural_patterns/composite 

clean:
	make -C behavioural_patterns/command clean
	make -C behavioural_patterns/observer clean
	make -C behavioural_patterns/state/iteration_1 clean
	make -C behavioural_patterns/state/iteration_2 clean
	make -C behavioural_patterns/state/iteration_3 clean
	make -C behavioural_patterns/strategy/iteration_1 clean
	make -C behavioural_patterns/strategy/iteration_2 clean
	make -C behavioural_patterns/visitor clean
	make -C creational_patterns/builder/pizza clean
	make -C creational_patterns/factory_method/iteration_1 clean
	make -C creational_patterns/factory_method/iteration_2 clean
	make -C creational_patterns/factory_method/iteration_3 clean
	make -C creational_patterns/prototype/iteration_1 clean
	make -C creational_patterns/prototype/iteration_2 clean
	make -C creational_patterns/singleton/iteration_1 clean
	make -C creational_patterns/singleton/iteration_2 clean
	make -C creational_patterns/singleton/iteration_3 clean
	make -C structural_patterns/adapter clean
	make -C structural_patterns/bridge clean
	make -C structural_patterns/composite clean
